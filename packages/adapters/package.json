{
  "name": "@mcx/adapters",
  "version": "0.1.0",
  "description": "MCX Adapter Utilities - HTTP client, generator",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "bun build src/index.ts src/base.ts src/fetch.ts src/generator.ts --outdir dist --target node --external @mcx/core && tsc --emitDeclarationOnly --declaration --outDir dist",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@mcx/core": "workspace:*",
    "yaml": "^2.6.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "typescript": "^5.7.2"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./base": {
      "import": "./dist/base.js",
      "types": "./dist/base.d.ts"
    },
    "./fetch": {
      "import": "./dist/fetch.js",
      "types": "./dist/fetch.d.ts"
    },
    "./generator": {
      "import": "./dist/generator.js",
      "types": "./dist/generator.d.ts"
    }
  }
}
